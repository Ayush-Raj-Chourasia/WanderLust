<style>
  .search-btn{
    background-color: #fe424d;
    color:#fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover{
    background-color: #fe424d;
    color:#fff;
  }
  .search-btn i{
    display:inline;
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius:25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }
  
  .search-inp::placeholder {
    color: var(--text-muted);
    opacity: 1;
  }
  
  [data-theme="dark"] .search-inp {
    background-color: var(--bg-secondary);
    color: var(--text-primary);
  }
  
  [data-theme="dark"] .search-inp::placeholder {
    color: var(--text-muted);
    opacity: 1;
  }
  .wishlist-link {
    position: relative;
    display: inline-block;
    margin-right: 1rem;
  }
  .wishlist-badge {
    position: absolute;
    top: -5px;
    right: -10px;
    background-color: #fe424d;
    color: white;
    border-radius: 50%;
    padding: 2px 6px;
    font-size: 0.7rem;
    font-weight: bold;
  }
  .theme-toggle {
    background: none;
    border: 2px solid var(--text-primary);
    color: var(--text-primary);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
  }
  .theme-toggle:hover {
    background-color: #fe424d;
    border-color: #fe424d;
    color: white;
    transform: rotate(180deg);
  }
  .navbar {
    background-color: var(--navbar-bg) !important;
    box-shadow: 0 2px 8px var(--shadow);
  }
  
  /* Professional icon buttons - Filled with gradient */
  .nav-icon-btn {
    position: relative;
    background: linear-gradient(135deg, #fe424d, #ff6b6b);
    border: none;
    border-radius: 50%;
    width: 42px;
    height: 42px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin: 0 0.3rem;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(254, 66, 77, 0.3);
  }
  
  .nav-icon-btn:hover {
    background: linear-gradient(135deg, #ff6b6b, #fe424d);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 66, 77, 0.5);
  }
  
  .nav-icon-btn i {
    font-size: 1.2rem;
    color: white !important;
    transition: all 0.3s ease;
  }
  
  /* Airbnb Home Button */
  .airbnb-home-btn {
    background: linear-gradient(135deg, #fe424d, #ff6b6b);
    color: white !important;
    border: none;
    padding: 0.6rem 1.5rem;
    border-radius: 25px;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(254, 66, 77, 0.3);
  }
  
  .airbnb-home-btn:hover {
    background: linear-gradient(135deg, #ff6b6b, #fe424d);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 66, 77, 0.5);
    color: white !important;
  }
  
  .airbnb-home-btn i {
    font-size: 1.1rem;
  }
  
  .user-greeting {
    color: var(--text-primary);
    font-weight: 500;
    margin: 0 0.5rem;
  }
  
  .navbar-toggler {
    border: 2px solid var(--text-primary);
  }
  
  @media (max-width: 768px) {
    .search-form {
      width: 100%;
      margin: 1rem 0;
    }
    .nav-icon-btn {
      width: 38px;
      height: 38px;
      margin: 0.3rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-inp"
          type="search"
          placeholder="Search destinations">
          <button class="btn search-btn" type="submit">
                <i class="fa-solid fa-magnifying-glass "></i>Search</button>
        </form>
      </div>

      <div class="navbar-nav ms-auto d-flex align-items-center">
        <a class="airbnb-home-btn" href="/listings/new">
          <i class="fa-solid fa-house"></i>
          Airbnb your home
        </a>
        <% if(!currUser)  { %>
        <a class="nav-link"  href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
        <a href="/recommendations" class="nav-icon-btn" title="For You">
          <i class="fa-solid fa-sparkles"></i>
        </a>
        <a href="/wishlist" class="nav-icon-btn" title="My Wishlist">
          <i class="fa-solid fa-heart"></i>
        </a>
        <span class="user-greeting d-none d-md-inline">Hi, <%= currUser.username %>!</span>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
        <button id="theme-toggle" class="theme-toggle" title="Toggle Dark/Light Mode">
          <i id="theme-icon" class="fa-solid fa-moon"></i>
        </button>
      </div>
    </div>
  </div>
</nav>